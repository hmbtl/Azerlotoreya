<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/template_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/template_remove"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/template_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="Azad"
            android:textColor="#474747"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/template_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/template_name"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:text="2015-10-08 03:32:27" />

    </RelativeLayout>


    <ImageButton
        android:id="@+id/template_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/template_container"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/template_container"
        android:background="?attr/selectableItemBackground"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/ic_remove"
        android:tint="#474747" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/template_container"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#aaa" />

</RelativeLayout>