<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="3dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">



                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#474747"
                        android:gravity="center|left"
                        android:paddingLeft="15dp"
                        android:text="@string/my_info"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="normal" />

                    <EditText
                        android:id="@+id/email_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#fff"
                        android:drawableLeft="@drawable/ic_email"
                        android:drawablePadding="20dp"
                        android:hint="@string/email"
                        android:paddingLeft="20dp"
                        android:singleLine="true"
                        android:text="humbetli.azad@gmail.com"
                        android:textColor="#474747"
                        android:textColorHint="#999999"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#474747" />
                    <EditText
                        android:id="@+id/name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#fff"
                        android:drawableLeft="@drawable/ic_name"
                        android:drawablePadding="20dp"
                        android:hint="@string/name"
                        android:paddingLeft="20dp"
                        android:singleLine="true"
                        android:text="Azad"
                        android:textColor="#474747"
                        android:textColorHint="#999999"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#474747" />

                    <EditText
                        android:id="@+id/surname_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#fff"
                        android:drawableLeft="@drawable/ic_surname"
                        android:drawablePadding="20dp"
                        android:hint="@string/surname"
                        android:paddingLeft="20dp"
                        android:singleLine="true"
                        android:text="Hümbətli"
                        android:textColor="#474747"
                        android:textColorHint="#999999"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#474747" />


                    <EditText
                        android:id="@+id/father_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#fff"
                        android:drawablePadding="20dp"
                        android:hint="@string/father_name"
                        android:drawableLeft="@drawable/ic_surname"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:textColor="#474747"
                        android:textColorHint="#999999"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#474747" />



                    <TextView
                        android:id="@+id/birthday_picker"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#fff"
                        android:drawableLeft="@drawable/ic_calendar"
                        android:drawablePadding="20dp"
                        android:gravity="left|center"
                        android:hint="@string/birthdate"
                        android:paddingLeft="20dp"
                        android:singleLine="true"
                        android:text="01/08/93"
                        android:textColor="#474747"
                        android:textColorHint="#999999"
                        android:textSize="17sp"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#474747" />


                    <EditText
                        android:id="@+id/id_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#fff"
                        android:drawableLeft="@drawable/ic_passport_id"
                        android:drawablePadding="20dp"
                        android:hint="@string/passport_id"
                        android:paddingLeft="20dp"
                        android:singleLine="true"
                        android:text="1012445"
                        android:textColor="#474747"
                        android:textColorHint="#999999"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"

                        android:background="#474747" />

                    <EditText
                        android:id="@+id/phone_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#fff"
                        android:drawableLeft="@drawable/ic_phone"
                        android:drawablePadding="20dp"
                        android:hint="@string/phone_number"
                        android:inputType="phone"
                        android:paddingLeft="20dp"
                        android:singleLine="true"
                        android:text="0552257732"
                        android:textColor="#474747"
                        android:textColorHint="#999999"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"

                        android:background="#474747" />

                    <EditText
                        android:id="@+id/address_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#fff"
                        android:drawableLeft="@drawable/ic_marker_48"
                        android:drawablePadding="10dp"
                        android:hint="@string/address"
                        android:inputType="phone"
                        android:paddingLeft="14dp"
                        android:maxLines="1"
                        android:text="Ilqar Musayev 42A"
                        android:textColor="#474747"
                        android:textColorHint="#999999"
                        android:textSize="17sp" />



                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="3dp">


                <TextView
                    android:id="@+id/change_password"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="?attr/selectableItemBackground"
                    android:drawableLeft="@drawable/ic_password"
                    android:drawablePadding="20dp"
                    android:paddingRight="5dp"
                    android:gravity="left|center"
                    android:drawableRight="@drawable/ic_expand_right"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:text="@string/change_password"
                    android:textColor="#474747"
                    android:textColorHint="#999999"
                    android:textSize="17sp"
                    android:textStyle="normal" />

            </android.support.v7.widget.CardView>



            <Button
                android:id="@+id/save_button"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_green"
                android:text="@string/save"
                android:textColor="#fff"
                android:textSize="15sp" />


        </LinearLayout>


    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/toolbar"
        android:src="@drawable/shadow_bottom" />

</RelativeLayout>