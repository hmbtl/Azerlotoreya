<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">


    <TextView
        android:id="@+id/number_select_label"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:gravity="center|left"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="@string/select_numbers_title"
        android:textColor="#fff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/selection_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_select_label"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/four_plus_four_ticket_selection_message"
        android:textColor="#686868"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@+id/selection_description"
        android:layout_margin="5dp"
        android:layout_above="@+id/select_numbers_okay"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="2dp"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="3dp">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lövhə A"
        android:textSize="13sp"
        android:textColor="#fff"
        android:background="#172fc9"
        android:textStyle="normal"
        android:gravity="center"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        />



            <GridView
                android:id="@+id/table_a_number_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:horizontalSpacing="3dp"
                android:numColumns="4"
                android:padding="5dp"
                android:scrollbars="none"
                android:verticalSpacing="3dp"
                android:visibility="visible" />
</LinearLayout>

    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="3dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lövhə B"
                    android:textSize="13sp"
                    android:background="#de1623"
                    android:textColor="#fff"
                    android:textStyle="normal"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    />



                <GridView
                    android:id="@+id/table_b_number_grid"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:horizontalSpacing="3dp"
                    android:numColumns="4"
                    android:padding="5dp"
                    android:scrollbars="none"
                    android:verticalSpacing="3dp"
                    android:visibility="visible" />
            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>


    <Button
        android:id="@+id/select_numbers_okay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/button_green"
        android:gravity="center"
        android:text="@string/save"
        android:textColor="#fff"
        android:textSize="15sp" />


</RelativeLayout>