<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="3dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">



                    <EditText
                        android:id="@+id/name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#fff"
                        android:drawablePadding="20dp"
                        android:drawableLeft="@drawable/ic_name"
                        android:hint="@string/name"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:textColor="#474747"
                        android:textColorHint="#999999"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#474747" />

                    <EditText
                        android:id="@+id/surname_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#fff"
                        android:drawablePadding="20dp"
                        android:hint="@string/surname"
                        android:drawableLeft="@drawable/ic_surname"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:textColor="#474747"
                        android:textColorHint="#999999"
                        android:textSize="17sp" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#474747" />

                    <EditText
                        android:id="@+id/father_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#fff"
                        android:drawablePadding="20dp"
                        android:hint="@string/father_name"
                        android:drawableLeft="@drawable/ic_surname"
                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:textColor="#474747"
                        android:textColorHint="#999999"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#474747" />


                    <TextView
                        android:id="@+id/birthday_picker"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_below="@+id/surname_edit_text"
                        android:background="#fff"
                        android:drawablePadding="20dp"
                        android:gravity="left|center"
                        android:hint="@string/birthdate"
                        android:drawableLeft="@drawable/ic_calendar"

                        android:maxLines="1"
                        android:paddingLeft="20dp"
                        android:textColor="#474747"
                        android:textColorHint="#999999"
                        android:textSize="17sp"
                        android:textStyle="normal" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#474747" />


                    <EditText
                        android:id="@+id/id_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:drawableLeft="@drawable/ic_passport_id"
                        android:background="#fff"
                        android:drawablePadding="20dp"
                        android:hint="@string/passport_id"
                        android:paddingLeft="20dp"
                        android:inputType="number"
                        android:textColor="#474747"
                        android:textColorHint="#999999"
                        android:textSize="17sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#474747" />

                    <EditText
                        android:id="@+id/phone_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#fff"
                        android:hint="@string/phone_number"
                        android:drawablePadding="20dp"
                        android:inputType="number"
                        android:maxLines="1"
                        android:drawableLeft="@drawable/ic_phone"
                        android:paddingLeft="20dp"
                        android:textColor="#474747"
                        android:textColorHint="#999999"
                        android:textSize="17sp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#474747" />

                    <EditText
                        android:id="@+id/address_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#fff"
                        android:hint="@string/address"
                        android:drawablePadding="10dp"
                        android:maxLines="1"
                        android:drawableLeft="@drawable/ic_marker_48"
                        android:paddingLeft="15dp"
                        android:textColor="#474747"
                        android:textColorHint="#999999"
                        android:textSize="17sp" />


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="3dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:gravity="center"
                    android:orientation="vertical">


                    <EditText
                        android:id="@+id/account_user_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#fff"
                        android:drawablePadding="20dp"
                        android:drawableLeft="@drawable/ic_email"
                        android:hint="@string/email"
                        android:singleLine="true"
                        android:paddingLeft="20dp"
                        android:textColor="#474747"
                        android:textColorHint="#999999"
                        android:textSize="17sp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#474747" />


                    <EditText
                        android:id="@+id/account_password_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#fff"
                        android:fontFamily="sans-serif"
                        android:drawableLeft="@drawable/ic_password"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:paddingLeft="20dp"
                        android:drawablePadding="20dp"
                        android:textColor="#474747"
                        android:textColorHint="#999999"
                        android:textSize="17sp" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#474747" />


                    <EditText
                        android:id="@+id/account_password_again_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#fff"
                        android:fontFamily="sans-serif"
                        android:hint="@string/password_new_again"
                        android:drawablePadding="20dp"
                        android:drawableLeft="@drawable/ic_password_again"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:paddingLeft="20dp"
                        android:textColor="#474747"
                        android:textColorHint="#999999"
                        android:textSize="17sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/terms_and_conditions_text"
                android:textColor="#686868"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button_register"
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_green"
                android:text="@string/register"
                android:textColor="#fff"
                android:textSize="15sp" />





        </LinearLayout>



    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/toolbar"
        android:src="@drawable/shadow_bottom"
        />

</RelativeLayout>