<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        >

        <TextView
            android:id="@+id/mobil_loto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="25dp"
            android:text="Mobil Lotto MMC"
            android:textSize="27sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mobil_loto_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobil_loto"
            android:paddingLeft="15dp"
            android:text="@string/distrib_text"
            android:textSize="17sp" />


        <RelativeLayout
            android:id="@+id/mobile_phones_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobil_loto_subtitle"
            android:layout_marginTop="40dp"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/call_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                android:textColor="#474747"
                android:textSize="18sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/call_title_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/call_title"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:alpha="0.5"
                android:background="#aaa" />

            <TextView
                android:id="@+id/phone_1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:paddingLeft="0dp"
                android:layout_below="@+id/call_title_divider"
                android:layout_toRightOf="@+id/call_indicator_1"
                android:text="(+99450) 318 88 21"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/call_indicator_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="7dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/call_title_divider"
                android:src="@drawable/ic_call"
                android:tint="#0e6b0c"
                />

            <TextView
                android:id="@+id/phone_2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_below="@+id/phone_1"
                android:layout_toRightOf="@+id/call_indicator_2"
                android:text="(+99455) 318 88 21"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/call_indicator_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:padding="7dp"
                android:layout_below="@+id/phone_1"
                android:src="@drawable/ic_call"
                android:tint="#0e6b0c"
                />

            <TextView
                android:id="@+id/phone_3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_below="@+id/phone_2"
                android:layout_toRightOf="@+id/call_indicator_3"
                android:text="(+99477) 318 88 21"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/call_indicator_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:padding="7dp"
                android:layout_below="@+id/phone_2"
                android:src="@drawable/ic_call"
                android:tint="#0e6b0c"

                />


        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/mobile_phones_container"
            android:src="@drawable/shadow_bottom" />

        <RelativeLayout
            android:id="@+id/email_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mobile_phones_container"
            android:layout_marginTop="20dp"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/email_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textColor="#474747"
                android:textSize="18sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/email_title_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/email_title"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:alpha="0.5"
                android:background="#aaa" />

            <TextView
                android:id="@+id/email_send"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center|left"
                android:layout_below="@+id/email_title_divider"
                android:layout_toRightOf="@+id/email_indicator"
                android:text="info@mobileair.az"
                android:textSize="22sp" />

            <ImageView
                android:id="@+id/email_indicator"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@+id/email_title_divider"
                android:padding="7dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_mail_send"
                />



        </RelativeLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/email_container"
            android:src="@drawable/shadow_bottom" />

    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@+id/toolbar"
        android:src="@drawable/shadow_bottom" />
    `
</RelativeLayout>